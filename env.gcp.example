# GCP Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (Cloud SQL)
DATABASE_URL=postgresql://username:password@/database_name?host=/cloudsql/project-id:region:instance-name
# Alternative format for external connection:
# DATABASE_URL=postgresql://username:password@external-ip:5432/database_name

# Redis Configuration (Cloud Memorystore)
REDIS_URL=redis://memorystore-ip:6379
# Alternative format for external connection:
# REDIS_URL=redis://external-ip:6379

# Application Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=false
LOG_LEVEL=info

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=your-cloud-storage-bucket-name
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
# Alternative: Use Application Default Credentials
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Cloud SQL Proxy Configuration (for local development)
CLOUD_SQL_PROXY_HOST=127.0.0.1
CLOUD_SQL_PROXY_PORT=5432

# Cloud Storage Configuration
GCS_BUCKET_NAME=your-cloud-storage-bucket-name
GCS_BUCKET_REGION=us-central1

# Cloud Run Configuration (for deployment)
SERVICE_NAME=healthcare-api
REGION=us-central1
MIN_INSTANCES=0
MAX_INSTANCES=10
MEMORY=1Gi
CPU=1

# Monitoring Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_REGION=us-central1

# Security Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Email Configuration (SendGrid, etc.)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your-google-analytics-id
